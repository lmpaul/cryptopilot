<div class="container" style="min-height: 83vh">
  <%if @dashboards.empty? %>
    <h1 class='py-4'>You don't have any dashboard yet</h1>
    <%= link_to "Add a dashboard", new_dashboard_path, class: "btn btn-outline-dark" %>
  <%else %>
    <h1 class='py-4'>Your dashboards</h1>
    <% @dashboards.each do |dashboard| %>
      <div class="card my-4 p-4">
        <%= link_to dashboard.name, dashboard_path(dashboard) %>
      </div>
    <% end %>
  <%end  %>
</div>

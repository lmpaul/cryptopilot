    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_crypto2.png", class:"rounded" , width: "200"; %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <div class="box">
          <div id="home">
            <%= link_to "Home", root_path, class: "navbar-buttons nav-active" %>
          </div>
          <div id="dashboard">
            <%= link_to "Pilots", dashboards_path, class: "navbar-buttons" %>
          </div>
          <div id="journal">
            <%= link_to "Journal", notes_path, class: "navbar-buttons" %>
          </div>
          <div id="ressources">
            <%= link_to "Ressources", ressources_path, class: "navbar-buttons" %>
          </div>
        </div >
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class:'mx-4 btn btn-dark' %>
        <li class="nav">
          <div class="user-name">
            <p> <%= current_user.username %></p>
            <%# if current_user.photo.attached? %>
              <%#= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%#= link_to "Action", "#", class: "dropdown-item" %>
                <%#= link_to "Another action", "#", class: "dropdown-item" %>
              </div>
            <%# end %>
          </div>
        </li>
      <% else %>
    </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Sign Up", new_user_registration_path, class: "mx-2 btn btn-flat" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log In", new_user_session_path, class: "mx-2 btn btn-secondary" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>




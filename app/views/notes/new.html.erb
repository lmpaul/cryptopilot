<div class="py-5"></div>
<div class="container py-5" style="min-height: 83vh">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="form-night">
        <h1>Add a note</h1>
        <%= simple_form_for @note do |f| %>
          <%= f.input :date %>
          <%= f.input :content %>
          <%= f.submit 'Add a note', class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

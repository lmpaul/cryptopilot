<div class="py-5"></div>
  <div class="container py-5" style="min-height: 83vh">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4 col-xs-6">
        <div class="form-night my-4 p-6">
          <h2 class="text-center">Add a transaction</h2>
          <%= simple_form_for [@dashboard, @transaction] do |f| %>
            <p>Asset: <abbr title="required">*</abbr></p>
            <%= f.input :asset_id, as: :select, collection:  Asset.all.map { |r| [r.name, r.id, data: { image: r.image }]}, input_html: { class: 'select2 w-100', style: "width: 100%" }, label: false %>
            <%= f.input :direction, as: :select,  collection: ["Buy", "Sell", "Add"], label: "Action"%>
            <%= f.input :price, as: :float, label: "Price in USD" %>
            <%= f.input :quantity, as: :float %>
            <p>Date<abbr title="required">*</abbr></p>
            <%= f.date_field :date, as: :date, max: Date.today, label: "date" , style: "width: 100%" %>
            <%= f.hidden_field :dashboard, value: @dashboard.id %>
            <%= f.button :submit, class: 'btn btn-flat mt-4 mb-2', style: "width: 100%" %>
          <% end %>
          <%= link_to "Back", :back, class: "btn btn-primary my-2", style: "width: 100%" %>
        </div>
      </div>
    </div>
  </div>
</div>

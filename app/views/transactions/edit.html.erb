<div class="py-5"></div>
<div class="container" style="min-height: 83vh">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
        <h2>Edit your transaction</h2>
        <%= simple_form_for [@dashboard, @transaction] do |f| %>
          <%= f.input :direction %>
          <%= f.input :asset_name %>
          <%= f.input :quantity %>
          <%= f.input :price %>
          <%= f.input :date %>
          <div class="button-edit">
            <%= f.submit "Edit",   class: "btn btn-flat", style: "width: 100%" %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
        <div class="my-5"></div>
    </div>
  </div>
</div>
